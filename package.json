{
  "name": "tipxmr-backend",
  "version": "1.0.0",
  "description": "Backend for TipXMR",
  "scripts": {
    "start": "node -r dotenv/config dist/server.js",
    "start-local": "npx nodemon -r dotenv/config src/server.ts",
    "watch": "npx nodemon -r dotenv/config src/db_sql.ts",
    "build": "tsc -p .",
    "new": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/db_sql.ts"
  },
  "type": "module",
  "keywords": [
    "tipxmr",
    "monero"
  ],
  "author": "Grischa Daum, Alex Anarcho, mghny",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@swc/core": "^1.2.123",
    "@swc/wasm": "^1.2.123",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "monero-javascript": "^0.5.9",
    "pg": "^8.7.1",
    "prettier": "^2.5.1",
    "socket.io": "^4.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.5",
    "@types/pg": "^8.6.3",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
